<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".Acticity.Splash.Activity_Splash_NoteSMS">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_app" />

    <TextView
        android:id="@+id/temp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="یادک"
        android:textColor="@color/colorLogo"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/temp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp1"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="یادداشت پیامک"
        android:textColor="@color/colorPurple2"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgDina"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/dina_logo" />

        <TextView
            android:id="@+id/txtDina"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="قدرت گرفته از داده کاوان دینا"
            android:textColor="@color/colorPurple2" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtVersion"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1.1"
        android:textColor="@color/colorBlack" />

</RelativeLayout>