<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtaasfd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/bg_greywhite_corner"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.4"
                android:gravity="right|center"
                android:padding="5dp"
                android:text="ارسال کننده: حاج علی "
                android:textColor="@color/colorBlack" />


            <TextView
                android:id="@+id/txtNameWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="0.7"
                android:background="@color/colorPurple2"
                android:gravity="center"
                android:padding="5dp"
                android:text="چهارشنبه"
                android:textColor="@color/mdtp_white" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:padding="4dp"
            android:text="1398/03/03"
            android:textColor="@color/colorBlack" />


        <TextView
            android:id="@+id/txtTextSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="متن پیام: هااااااااااااااا بله"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorBlack" />


        <LinearLayout
            android:id="@+id/linearNoNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAddNote"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_edit" />

            <TextView
                android:id="@+id/txtNoNote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="هنوز هیچ یادداشتی اضافه نشده"
                android:textColor="@color/colorBlack" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="0.5"
                    android:gravity="right|center"
                    android:padding="5dp"
                    android:text="یادداشت"
                    android:textColor="@color/colorBlack" />


                <TextView
                    android:id="@+id/txtDateNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="0.5"
                    android:background="@color/colorPurple2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="چهارشنبه 1398/03/03"
                    android:textColor="@color/mdtp_white" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtTextNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="متن پیام: هااااااااااااااا بله"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>